<%= form_with model: @poem,local:true do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control poem_start' %>
  </div>
  <div class="check_box">
    <span>タグ</span>
    <div>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  
<% end %>