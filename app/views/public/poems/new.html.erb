<%= form_with model: @poem,local:true do |f| %>
  <div class="form-group">
    <%= f.label :poem_start %>
    <%= f.text_field :poem_start, class: 'form-control poem_start' %>
  </div>
  <div class="form-group">
    <%= f.label :poem_middle %>
    <%= f.text_field :poem_middle, class: 'form-control poem_middle' %>
  </div>
  <div class="form-group">
    <%= f.label :poem_end %>
    <%= f.text_field :poem_end, class: 'form-control poem_end' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>