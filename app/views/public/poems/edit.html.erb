<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>俳句編集</h1>
      <%= form_with model: @poem,local:true do |f| %>
        <div class="form-group">
          <%= f.label :poem_start %>
          <%= f.text_field :poem_start, class: 'form-control poem_start' %>
        </div>
        <div class="form-group">
          <%= f.label :poem_middle %>
          <%= f.text_field :poem_middle, class: 'form-control poem_middle' %>
        </div>
        <div class="form-group">
          <%= f.label :poem_end %>
          <%= f.text_field :poem_end, class: 'form-control poem_end' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>    