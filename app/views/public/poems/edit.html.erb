<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>俳句編集</h1>
      <%= form_with model: @poem,local:true do |f| %>
        <div class="form-group">
          <%= f.label :poem_start %>
          <%= f.text_field :body, class: 'form-control poem_start' %>
        </div>
        <div class="check_box">
          <span>タグ</span>
          <div>
            <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
              <%= tag.label do %>
                <%= tag.check_box %>
                <%= tag.text %>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>